{
    "id": "org.kde.kolourpaint",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "kolourpaint",
    "rename-icon": "kolourpaint",
    "finish-args": [
        "--device=dri",
        "--filesystem=home",
        "--share=ipc",
        "--share=network",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/plugins/designer",
        "/share/man"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "24.08",
            "add-ld-path": ".",
            "no-autodownload": false
        }
    },
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],
    "modules": [
        {
            "name": "kolourpaint",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DQT_MAJOR_VERSION=6"
            ],
            "post-install": [
                "gunzip -S z /app/share/icons/hicolor/scalable/apps/kolourpaint.svgz"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.12.0/src/kolourpaint-24.12.0.tar.xz",
                    "sha256": "7275709d94dc07558a23c5b3059af486fbd280591c6062d16ac9a0d2453c581c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kolourpaint-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
