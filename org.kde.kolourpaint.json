{
    "id": "org.kde.kolourpaint",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "kolourpaint",
    "rename-icon": "kolourpaint",
    "finish-args": [
        "--device=dri",
        "--filesystem=home",
        "--share=ipc",
        "--share=network",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/plugins/designer",
        "/share/doc",
        "/share/man"
    ],
    "modules": [
        {
            "name": "kolourpaint",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DQT_MAJOR_VERSION=6"
            ],
            "post-install": [
                "gunzip -S z /app/share/icons/hicolor/scalable/apps/kolourpaint.svgz"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.12.2/src/kolourpaint-25.12.2.tar.xz",
                    "sha256": "526b630af7797a79fdec0eba7948236ed2975e2d3a66f53a92cfa6787d5acf86",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kolourpaint-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
