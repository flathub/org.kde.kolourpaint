{
   "id": "org.kde.kolourpaint",
   "runtime": "org.kde.Platform",
   "runtime-version": "5.13",
   "sdk": "org.kde.Sdk",
   "command": "kolourpaint",
   "rename-icon": "kolourpaint",
   "finish-args": [
      "--share=ipc",
      "--socket=x11",
      "--socket=wayland",
      "--device=dri",
      "--filesystem=xdg-config/kdeglobals:ro",
      "--filesystem=host"
   ],
   "cleanup": [
      "/include",
      "/lib/cmake",
      "/lib/plugins/designer",
      "/share/man"
   ],
   "modules": [
      {
         "name": "kdelibs4support",
         "buildsystem": "cmake-ninja",
         "builddir": true,
         "config-opts": [
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
         ],
         "cleanup": [
            "/bin"
         ],
         "sources": [
            {
               "type": "archive",
               "url": "https://download.kde.org/stable/frameworks/5.64/portingAids/kdelibs4support-5.64.0.tar.xz",
               "sha256": "8c9e23e0e22ccec8b46b4c4b160adb8c8765c1dc308bf297f6f72ccc97c7b682"
            }
         ]
      },
      {
         "name": "kolourpaint",
         "buildsystem": "cmake-ninja",
         "builddir": true,
         "config-opts": [
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
         ],
         "sources": [
            {
               "type": "archive",
               "url": "https://download.kde.org/stable/release-service/19.12.0/src/kolourpaint-19.12.0.tar.xz",
               "sha256": "bbe2ec76db67caf90060dd03af3f3801f8d95e60945f544c88402f26d79bbabb"
